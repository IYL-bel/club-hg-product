{% extends '::layout.html.twig' %}


{% block content %}

<div class="content_header">

    <h1 class="content_header__title">
        Весенний субботник
        <span>/ <i>68</i> участниц</span>
    </h1>

    <ul class="content_header__breadcrumbs">
        <li><a href="#">Главная</a></li>
        <li><a href="#">Клуб экспертов чистоты</a></li>
        <li><a href="#">Конкурсы</a></li>
        <li><span>Весенний субботник</span></li>
    </ul><!--.content_header__breadcrumbs-->

    <ul class="content_header__show">
        <li><span>Показать:</span></li>
        <li><a href="#">Все конкурсы</a></li>
        <li><a href="#">Текущие конкурсы</a></li>
        <li><a href="#">Архив конкурсов</a></li>
        <li><a href="#">Победители</a></li>
    </ul><!--.content_header__show-->

</div><!--.content_header-->

<div class="content_main">
    <div class="content_main__articles">

        {% for contest in contests %}

            <div class="content_main__articles-tile  contest{% if (loop.index - 1) % 4 == 0 %} first{% endif %}">
                <div class="content_main__articles-tile_img img_c">
                    <img src="{{ asset(contest.getFilePathWeb()) }}" alt="+{{ contest.pointsParticipation }} баллов / {{ contest.title }}"/>
                </div>
                <div class="content_main__articles-tile_header">
                    <div class="content_main__articles-tile_header_scores">+{{ contest.pointsParticipation }} баллов</div>
                    <h5 class="content_main__articles-tile_header_title">{{ contest.title }}</h5>
                </div>
                <div class="content_main__articles-tile_footer">
                    {#<div class="content_main__articles-tile_footer_desc">1/ Придумай оригинальное поздравление с 8 марта для домохозяек<br/> 2/ Загрузи на сайт<br/></div>#}
                    <div class="content_main__articles-tile_footer_link"><span>24 участницы </span><i>/</i><a class="show_popup" href="#">Участвовать</a></div>
                </div>
            </div><!--.content_main__articles-tile-->

        {% endfor %}

    </div><!--.content_main__articles-->
</div><!--.content_main-->

{% endblock content %}
