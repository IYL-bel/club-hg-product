{% extends '::layout.html.twig' %}


{% block content %}


<div class="content_header">

    <h1 class="content_header__title">
        Призы
    </h1>

    <ul class="content_header__breadcrumbs">
        <li><a href="#">Главная</a></li>
        <li><a href="#">Клуб находчивых домохозяек</a></li>
        <li><span>Призы</span></li>
    </ul><!--.content_header__breadcrumbs-->

    <ul class="content_header__show">
        <li><span>Показать:</span></li>
        <li><a href="#">Все призы</a></li>
        <li><a href="#">Товары</a></li>
        <li><a href="#">Услуги</a></li>
    </ul><!--.content_header__show-->

</div><!--.content_header-->


<div class="content_main">
    <div class="content_main__articles trophy">

        {% for prize in prizes %}

            <div class="content_main__articles-tile{% if (loop.index - 1) % 4 == 0 %} first{% endif %}">
                <div class="content_main__articles-tile_img img_c">
                    <img src="{{ asset(prize.getFilePathWeb()) }}" alt="{{ prize.title }}"/>
                </div>
                <div class="content_main__articles-tile_header">
                    <a href="#" class="content_main__articles-tile_header_title {% if prize.titleColor != 'blue' %}{{ prize.titleColor }}{% endif %}">{{ prize.title }}</a>
                </div>
                <div class="content_main__articles-tile_footer">
                    <div class="content_main__articles-tile_footer_take">
                        <a href="take_part">Участвовать в розыгрыше</a><span> / 200 баллов</span>
                    </div>
                    <div class="content_main__articles-tile_footer_buy">
                        <a href="buy">Купить</a><span> / 1000 баллов</span>
                    </div>
                </div>
                <div class="blue_b bt"></div>
                <div class="blue_b br"></div>
                <div class="blue_b bb"></div>
                <div class="blue_b bl"></div>
            </div><!--.content_main__articles-tile-->

        {% endfor %}

    </div><!--.content_main__articles-->
</div><!--.content_main-->

{% endblock content %}
