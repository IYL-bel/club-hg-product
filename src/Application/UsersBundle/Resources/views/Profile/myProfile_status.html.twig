<div style="margin: 0 28px 0 28px;">

    {% for key, status in prof_statuses  %}

        <div style="margin-bottom: 18px; padding: 6px 0;" class="border-status-user">
            <table width="100%">
                <tr >
                    <td style="width: 200px;">
                        <div style="margin: 16px;">
                            <div class="status_medal" style="padding-top: 5px;">
                                {#<i></i>#}
                                <div><img src="{{ asset('images/medal_'~key~'.png') }}" alt=""></div>
                            </div>
                            <div class="status_title">
                                {% set name_status = 'templates.names.statuses_profile.'~key %}
                                <span>{{ name_status |trans }}</span>
                            </div>
                        </div>
                    </td>
                    <td>
                        <div style="padding-left: 20px;">
                            Нужно набрать

                            {% if status and status.scores %}
                                {{ status.scores }}
                            {% else %}
                                {{ default_scores_statuses[key] }}
                            {% endif %}

                            балов
                        </div>
                    </td>
                    <td>
                        <div class="status_txt">
                            {% if status %}
                                {{ status.description |trans |raw }}
                            {% else %}
                                {% set description = 'templates.description.statuses.'~key %}
                                {{ description |trans |raw }}
                            {% endif %}
                        </div>
                    </td>
                </tr>
            </table>
        </div>

    {% endfor %}

</div>