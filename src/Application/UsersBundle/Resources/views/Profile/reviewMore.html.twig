<div class="popup_wrap_content_title">
    <h3 class="title"><strong>Отзыв на товар</strong></h3>
    <span> / <i>{{ commentProduct.score.points }}</i> баллов</span>
</div>

<div style="margin-top: 20px;">
    <h3>{{ commentProduct.nameProduct }}</h3>
</div>

<div class="popup_wrap_content_txt" style="margin-bottom: 8px;">
    <p>{{ commentProduct.description |nl2br }}</p>
</div>


{% if commentProduct.commentsProductionPhotos |length %}
    {% for photo in commentProduct.commentsProductionPhotos %}
        <div style="height: 110px;">
            <div style="float: left;">
                <div class="photo-logo-100">
                    <a href="{{ asset(photo.getFilePathWeb()) }}" class="photo" target="_blank">
                        <img src="{{ asset(photo.getFilePathWeb()) }}" class="photo-img" alt="name"/>
                    </a>
                </div>
            </div>
            <div style="margin-left: 120px; padding-top: 26px;">
                <span>{{ photo.description }}</span>
            </div>
        </div>
    {% endfor %}
{% endif %}


<div class="popup_wrap_content_name">
    {{ app.user.firstName }} {{ app.user.lastName }}{% if app.user.occupation %}<span>, {{ app.user.occupation }}</span>{% endif %}
</div>

